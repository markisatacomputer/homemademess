div.navvy(ng-controller='NavbarCtrl', ng-class="{home: isActive('/')}")
  div#search
    tags-input(ng-model="tags", title="Tags", placeholder="search by tag", replace-spaces-with-dashes="false", on-tag-added="redoSearch()", on-tag-removed="redoSearch()")
      auto-complete(source="findTags($query)")
  div.menu.container(ng-show='isAdmin()')
    md-fab-speed-dial.md-fling(md-open="false" md-direction="down")
      md-fab-trigger
        md-button(aria-label="Menu" class="md-fab")
          md-icon.material-icons menu

      md-fab-actions
        div(ng-repeat="item in menu")
          md-button(aria-label="{{item.label}}" class="md-fab md-raised md-mini" ng-click="this[item.action](item.args)")
            md-tooltip(md-direction="left") {{item.label}}
            md-icon.material-icons {{item.src}}

  div.menu.container(ng-show='!isAdmin()')
    md-fab-speed-dial.md-fling(md-open="false" md-direction="down")
      md-fab-trigger
        md-button(aria-label="Log In" class="md-fab" ng-click="loginDialog()")
          md-tooltip(md-direction="top") Log In
          md-icon.material-icons account_circle
